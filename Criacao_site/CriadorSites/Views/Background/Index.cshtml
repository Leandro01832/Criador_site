@model IEnumerable<business.Background>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.backgroundImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagem)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.backgroundImage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cor)
        </td>
        <td>
            @{
                if (item.Imagem != null)
                {
                    <img src="@Url.Content(item.Imagem)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
                }
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdBackground }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdBackground }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdBackground })
        </td>
    </tr>
}

</table>
