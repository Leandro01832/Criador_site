@model business.Imagem

@{
    ViewBag.Title = "Delete";
}

<h2>Deletar</h2>

<h3>Deseja realmente deletar este item?</h3>
<div>
    <h4>Imagem</h4>
    <hr />


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Arquivo)
            </dt>

            <dd>
                @{
                    if (Model.Arquivo != null)
                    {
                        <img src="@Url.Content(Model.Arquivo)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
                    }
                }
            </dd>

        </dl>

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Voltar para a lista", "Index")
        </div>
    }
</div>
