@model business.Imagem

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Imagem</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Arquivo)
        </dt>

        <dd>
            @{
                if (Model.Arquivo != null)
                {
                    <img src="@Url.Content(Model.Arquivo)" alt="Image" style="width:400px;height:150px;max-width: 100%; height: auto;" />
                }
            }
        </dd>

    </dl>
</div>
<p>    
    @Html.ActionLink("Voltar para a lista", "Index")
</p>
