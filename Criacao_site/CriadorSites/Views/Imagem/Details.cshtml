@model business.Imagem

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Imagem</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Figura)
        </dt>

        <dd>
            @{
                if (Model.Figura != null)
                {
                    <img src="@Url.Content(Model.Figura)" alt="Image" style="width:400px;height:150px;max-width: 100%; height: auto;" />
                }
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.IdImagem }) |
    @Html.ActionLink("Back to List", "Index")
</p>
