@model business.Div

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Div</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdDiv)
        @Html.HiddenFor(model => model.ImagemDiv)

        <div class="form-group">
            @Html.LabelFor(model => model.Texto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.background_, "background_", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("background_", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.background_, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdicionarImagem, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    <input type="checkbox" value="True" id="AdicionarImagem" name="AdicionarImagem" onclick="document.getElementById('ImagemDivFile').disabled = !this.checked;">
                    @Html.ValidationMessageFor(model => model.AdicionarImagem, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImagemDivFile, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span class="btn btn-default btn-file">
                    @Html.TextBoxFor(modelo => modelo.ImagemDivFile, new { type = "file", disabled = "disabled" })
                </span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.pagina_, "pagina_", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("pagina_", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.pagina_, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
   <script>
          $(document).ready(function () {

              $("#Cor").click(function () {
                  $("#config_cor, #config_letra").fadeOut("slow")
                  $("#config_cor").fadeIn("slow");

              });

              $("#Tipo").click(function () {
                  $("#config_cor, #config_letra").fadeOut("slow")
                  $("#config_letra").fadeIn("slow");
              });
          });
</script>
}
